---
import SectionHeader from '../components/ui/section-header.vue';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class='container mx-auto px-4 md:px-0 py-14 md:py-24 flex flex-col md:flex-row gap-8 overflow-visible'>
  <slot name='content'>
    <div class='mt-1 w-full md:max-w-1/3'>
      <SectionHeader client:load title={title} />
    </div>
    <div class='w-full flex flex-col gap-4'>
      <slot />
    </div>
  </slot>
</section>
